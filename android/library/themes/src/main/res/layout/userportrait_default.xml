<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.themes.userportrait.UserPortraitScreenletView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/portrait_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal" />

    <ProgressBar
        android:id="@+id/portrait_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible" />


</com.liferay.mobile.screens.themes.userportrait.UserPortraitScreenletView>