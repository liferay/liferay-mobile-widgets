<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.themes.material.userportrait.UserPortraitScreenletView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView android:scaleType="fitXY"
        android:id="@+id/portrait_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/default_portrait_placeholder" />

    <ProgressBar android:layout_gravity="center"
        android:id="@+id/portrait_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />


</com.liferay.mobile.screens.themes.material.userportrait.UserPortraitScreenletView>