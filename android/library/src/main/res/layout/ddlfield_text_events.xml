<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.events.ddl.form.fields.DDLFieldTextView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="10dp"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/liferay_ddl_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="0dp"
			android:labelFor="@+id/liferay_ddl_edit_text"
			android:paddingRight="5dp"
			android:textColor="@color/textColorSecondary_default"
			android:textStyle="bold"
			android:visibility="gone"
			/>

		<TextView
			android:id="@+id/required_asterisk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="*"
			android:textColor="@color/clear_red_default"
			android:textStyle="bold"
			android:visibility="gone"
			/>
	</LinearLayout>

	<EditText
		android:id="@+id/liferay_ddl_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="text"
		/>

	<TextView
		android:id="@+id/error_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		/>

</com.liferay.mobile.screens.viewsets.events.ddl.form.fields.DDLFieldTextView>
