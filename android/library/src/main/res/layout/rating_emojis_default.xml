<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.rating.EmojisRatingView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="10dp"
	style="@style/default_screenlet"
	>

	<ProgressBar
		android:id="@+id/liferay_rating_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:progressTint="@color/colorPrimary_default"
		android:visibility="gone"
		/>

	<RelativeLayout
		android:id="@+id/liferay_rating_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"
		tools:visibility="visible"
		>

		<Button
			android:id="@+id/emoji_1_button"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_alignParentLeft="true"
			android:background="@drawable/ripple"
			android:text="@string/emoji1"
			android:textSize="55sp"
			tools:text=":)"
			/>

		<Button
			android:id="@+id/emoji_2_button"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_toRightOf="@+id/emoji_1_button"
			android:background="@drawable/ripple"
			android:text="@string/emoji2"
			android:textSize="55sp"
			tools:text=":/"
			/>

		<Button
			android:id="@+id/emoji_3_button"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_toRightOf="@+id/emoji_2_button"
			android:background="@drawable/ripple"
			android:text="@string/emoji3"
			android:textSize="55sp"
			tools:text=":*"
			/>

		<Button
			android:id="@+id/emoji_4_button"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_toRightOf="@+id/emoji_3_button"
			android:background="@drawable/ripple"
			android:text="@string/emoji4"
			android:textSize="55sp"
			tools:text=":S"
			/>

		<Button
			android:id="@+id/emoji_5_button"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_toRightOf="@+id/emoji_4_button"
			android:background="@drawable/ripple"
			android:text="@string/emoji5"
			android:textSize="55sp"
			tools:text=":("
			/>

		<TextView
			android:id="@+id/emoji_1_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/emoji_1_button"
			android:layout_marginTop="20dp"
			android:textColor="@color/textColorPrimary_default"
			android:textSize="30sp"
			tools:text=":) 5"
			/>

		<TextView
			android:id="@+id/emoji_2_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/emoji_1_label"
			android:layout_marginTop="20dp"
			android:textColor="@color/textColorPrimary_default"
			android:textSize="30sp"
			tools:text=":/ 45"
			/>

		<TextView
			android:id="@+id/emoji_3_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/emoji_2_label"
			android:layout_marginTop="20dp"
			android:textColor="@color/textColorPrimary_default"
			android:textSize="30sp"
			tools:text=":* 205"
			/>

		<TextView
			android:id="@+id/emoji_4_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/emoji_3_label"
			android:layout_marginTop="20dp"
			android:textColor="@color/textColorPrimary_default"
			android:textSize="30sp"
			tools:text=":S 469"
			/>

		<TextView
			android:id="@+id/emoji_5_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/emoji_4_label"
			android:layout_marginTop="20dp"
			android:textColor="@color/textColorPrimary_default"
			android:textSize="30sp"
			tools:text=":( 206"
			/>

	</RelativeLayout>

</com.liferay.mobile.screens.viewsets.defaultviews.rating.EmojisRatingView>