<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.ddl.form.fields.DDLFieldTextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/liferay_ddl_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/liferay_ddl_edit_text"
        android:textColor="@android:color/white"
        android:visibility="gone"
        style="@style/westeros_label"
        />

    <EditText
        android:id="@+id/liferay_ddl_edit_text"
        android:layout_height="120dp"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:singleLine="false"
        style="@style/westeros_dark_edit_text"
        />
</com.liferay.mobile.screens.viewsets.defaultviews.ddl.form.fields.DDLFieldTextView>