<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.westerosemployees_hybrid.views.DocsCard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/westeros_white_shape_ripple"
    android:elevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/documents_title"
            android:tag="title"
            android:text="@string/docs"
            style="@style/westeros_card_title_black"
            />

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_down"
            android:tag="@string/arrow_tag"
            android:visibility="invisible"
            style="@style/westeros_arrow"
            />

        <com.liferay.mobile.screens.web.WebScreenlet
            android:id="@+id/portlet_docs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/documents_title"
            />

    </RelativeLayout>

    <include layout="@layout/documents_detail_subview"/>

</com.liferay.mobile.screens.westerosemployees_hybrid.views.DocsCard>
