<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/comment_description"
        android:layout_alignParentTop="true"
        android:text="@string/comment_display_label"
        style="@style/label"
        />

    <com.liferay.mobile.screens.comment.add.CommentAddScreenlet
        android:id="@+id/comment_add_screenlet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:className="@string/liferay_comment_asset_className"
        app:classPK="@string/liferay_comment_asset_id"
        />

</LinearLayout>
