<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Spinner
        android:id="@+id/spinner_scale_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:entries="@array/image_scale_type"
        />

    <com.liferay.mobile.screens.dlfile.display.image.ImageDisplayScreenlet
        android:id="@+id/image_display_screenlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinner_scale_type"
        app:autoLoad="false"
        app:entryId="@string/liferay_image_entry_id"
        app:layoutId="@layout/image_display_default"
        app:placeholder="@drawable/default_hourglass"
        />

</RelativeLayout>