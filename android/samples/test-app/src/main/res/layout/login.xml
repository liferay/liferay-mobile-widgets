<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:liferay="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<TextView
		style="@style/label"
		android:text="@string/login_label"/>

	<com.liferay.mobile.screens.auth.login.LoginScreenlet
		android:id="@+id/login_default"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		liferay:basicAuthMethod="email"
		liferay:layoutId="@layout/login_default"
		liferay:oauthConsumerKey="@string/liferay_oauth_consumer_key"
		liferay:oauthConsumerSecret="@string/liferay_oauth_consumer_secret"/>

	<com.liferay.mobile.screens.auth.login.LoginScreenlet
		android:id="@+id/login_material"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		liferay:basicAuthMethod="email"
		liferay:layoutId="@layout/login_material"/>

</LinearLayout>